/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  background-color: #f5f5f5;
  color: #333333;
  font-family: -apple-system-font, "Helvetica Neue", sans-serif;
}

.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.btn {
  padding: 24rpx 48rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  text-align: center;
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #D4AF37 0%, #C5A028 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(212, 175, 55, 0.3);
}

.btn-primary:active {
  opacity: 0.85;
  transform: scale(0.98);
}

.btn-secondary {
  background-color: #FFFFFF;
  color: #D4AF37;
  border: 2rpx solid #D4AF37;
}

.btn-secondary:active {
  opacity: 0.8;
}

.card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.text-center {
  text-align: center;
}

.text-primary {
  color: #D4AF37;
}

.text-secondary {
  color: #999999;
}

.text-small {
  font-size: 24rpx;
}

.text-medium {
  font-size: 28rpx;
}

.text-large {
  font-size: 36rpx;
}

.text-bold {
  font-weight: bold;
}

.mt-small {
  margin-top: 16rpx;
}

.mt-medium {
  margin-top: 32rpx;
}

.mt-large {
  margin-top: 48rpx;
}

.mb-small {
  margin-bottom: 16rpx;
}

.mb-medium {
  margin-bottom: 32rpx;
}

.mb-large {
  margin-bottom: 48rpx;
}

