.detail-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.product-swiper {
  width: 100%;
  height: 750rpx;
  background: #fff;
}

.product-swiper-image {
  width: 100%;
  height: 100%;
}

.image-indicator {
  position: absolute;
  top: 700rpx;
  right: 30rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  z-index: 10;
}

.product-info {
  background: #fff;
  padding: 40rpx 30rpx;
  margin-top: 20rpx;
}

.product-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.product-price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.product-price {
  font-size: 48rpx;
  font-weight: bold;
  color: #C8102E;
}

.product-id {
  font-size: 24rpx;
  color: #999;
}

.product-category {
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 0;
  border-top: 1rpx solid #eee;
}

.category-label {
  color: #999;
}

.category-value {
  color: #5D4E37;
  font-weight: 500;
}

.product-detail {
  background: #fff;
  margin-top: 20rpx;
  padding: 40rpx 30rpx;
}

.detail-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #C8102E;
}

.detail-images {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.detail-image {
  width: 100%;
  border-radius: 12rpx;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  background: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.share-btn,
.contact-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.share-btn {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: #5D4E37;
  margin-right: 20rpx;
}

.contact-btn {
  background: linear-gradient(135deg, #C8102E 0%, #E63946 100%);
  color: #fff;
}

.btn-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

.empty-state {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  font-size: 32rpx;
  color: #999;
}
