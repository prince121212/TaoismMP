.culture-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #C8102E 0%, #E63946 100%);
  padding: 40rpx 30rpx;
  position: relative;
}

.culture-page::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image:
    radial-gradient(circle at 20% 30%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 70%, rgba(255, 255, 255, 0.08) 0%, transparent 50%);
  pointer-events: none;
}

.header {
  text-align: center;
  margin-bottom: 20rpx;
  padding-top: 40rpx;
  position: relative;
  z-index: 1;
}

.swiper-container {
  height: calc(100vh - 240rpx);
  position: relative;
}

.swipe-hint {
  position: fixed;
  top: 50%;
  transform: translateY(-50%);
  z-index: 1000;
  animation: swipe-pulse 2s ease-in-out infinite;
  pointer-events: auto;
}

.swipe-hint-left {
  left: 20rpx;
}

.swipe-hint-right {
  right: 20rpx;
}

.swipe-arrow {
  font-size: 60rpx;
  color: rgba(255, 255, 255, 0.8);
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.5);
  display: block;
}

@keyframes swipe-pulse {
  0%, 100% {
    opacity: 0.6;
    transform: translateY(-50%) scale(1);
  }
  50% {
    opacity: 1;
    transform: translateY(-50%) scale(1.2);
  }
}

.scroll-content {
  height: 100%;
  padding: 20rpx 0 100rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  text-align: center;
  margin-bottom: 30rpx;
  text-shadow: 2rpx 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.travel-card {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.98) 0%, rgba(255, 250, 240, 0.98) 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  margin: 0 30rpx 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.15);
  border: 2rpx solid rgba(139, 115, 85, 0.2);
}

.product-card {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.98) 0%, rgba(255, 250, 240, 0.98) 100%);
  border-radius: 24rpx;
  padding: 30rpx;
  margin: 0 30rpx 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.15);
  border: 2rpx solid rgba(139, 115, 85, 0.2);
  text-align: center;
}

.store-card {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  border-radius: 24rpx;
  padding: 0;
  margin: 0 30rpx 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(255, 165, 0, 0.3);
  border: 2rpx solid rgba(255, 215, 0, 0.5);
  overflow: hidden;
}

.store-card-content {
  display: flex;
  align-items: center;
  padding: 40rpx;
}

.store-icon {
  font-size: 60rpx;
  margin-right: 30rpx;
}

.store-info {
  flex: 1;
}

.store-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #5D4E37;
  margin-bottom: 10rpx;
}

.store-desc {
  font-size: 24rpx;
  color: #8B7355;
}

.store-arrow {
  font-size: 40rpx;
  color: #5D4E37;
  font-weight: bold;
}


.product-image {
  width: 100%;
  height: 540rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  display: block;
  background: #f5f5f5;
  overflow: hidden;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #5D4E37;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

.product-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #C8102E;
  margin-bottom: 10rpx;
}

.product-category {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}


.title {
  font-size: 52rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
  letter-spacing: 8rpx;
  text-shadow: 2rpx 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.95);
  letter-spacing: 4rpx;
  text-shadow: 1rpx 1rpx 4rpx rgba(0, 0, 0, 0.2);
}

.content {
  padding-bottom: 120rpx;
  position: relative;
  z-index: 1;
}

.culture-card {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.98) 0%, rgba(255, 250, 240, 0.98) 100%);
  border-radius: 24rpx;
  padding: 45rpx;
  margin-bottom: 35rpx;
  box-shadow:
    0 10rpx 30rpx rgba(0, 0, 0, 0.15),
    0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid rgba(139, 115, 85, 0.2);
  position: relative;
  overflow: hidden;
}

.culture-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 100%;
  background: linear-gradient(180deg, #8B7355 0%, #D2B48C 100%);
}

.card-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #5D4E37;
  margin-bottom: 24rpx;
  padding-left: 28rpx;
  position: relative;
}

.card-content {
  font-size: 28rpx;
  color: #4A4A4A;
  line-height: 2;
  text-align: justify;
  text-indent: 2em;
  padding-left: 28rpx;
}

.card-detail {
  font-size: 26rpx;
  color: #666;
  line-height: 2;
  text-align: justify;
  padding-left: 28rpx;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx dashed rgba(139, 115, 85, 0.3);
  white-space: pre-line;
}

.expand-btn {
  text-align: center;
  font-size: 24rpx;
  color: #8B7355;
  margin-top: 20rpx;
  padding-top: 15rpx;
  border-top: 1rpx solid rgba(139, 115, 85, 0.15);
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 35rpx;
  text-align: center;
  background: linear-gradient(180deg, transparent 0%, rgba(139, 115, 85, 0.9) 100%);
  backdrop-filter: blur(10rpx);
  z-index: 10;
}

.footer-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.95);
  letter-spacing: 3rpx;
  text-shadow: 1rpx 1rpx 3rpx rgba(0, 0, 0, 0.3);
}
