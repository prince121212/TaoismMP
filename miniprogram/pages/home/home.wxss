/* miniprogram/pages/home/home.wxss */
.draw-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF8E7 0%, #FFFFFF 100%);
  padding: 40rpx 32rpx 120rpx;
  display: flex;
  flex-direction: column;
}

.header-decoration {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  color: #D4AF37;
  margin-bottom: 16rpx;
  letter-spacing: 8rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #999999;
  letter-spacing: 2rpx;
}

.drum-area {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-bottom: 60rpx;
  position: relative;
  cursor: pointer;
}

.drum-container {
  width: 280rpx;
  height: 400rpx;
  position: relative;
  transition: transform 0.1s;
}

.drum-image {
  width: 100%;
  height: 100%;
}

.drum-container.shaking {
  animation: shake 1s ease-in-out;
}

@keyframes shake {
  0%, 100% { transform: rotate(0deg); }
  10%, 30%, 50%, 70%, 90% { transform: rotate(-8deg); }
  20%, 40%, 60%, 80% { transform: rotate(8deg); }
}

.drum-body {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 签筒顶部 */
.drum-top {
  width: 240rpx;
  height: 40rpx;
  background: linear-gradient(180deg, #E63946 0%, #C41E3A 100%);
  border-radius: 120rpx 120rpx 0 0;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  position: relative;
  z-index: 3;
  border: 3rpx solid #FFD700;
}


/* 签筒中间（圆柱体） */
.drum-middle {
  width: 240rpx;
  height: 300rpx;
  background: linear-gradient(90deg, #B8232F 0%, #C41E3A 50%, #B8232F 100%);
  position: relative;
  box-shadow: inset 0 0 20rpx rgba(0, 0, 0, 0.2);
  overflow: hidden;
}

.drum-decoration {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
}

.drum-text {
  font-size: 48rpx;
  color: #FFD700;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 签条容器 */
.sticks-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  padding-top: 20rpx;
}

.stick {
  width: 8rpx;
  height: 180rpx;
  background: linear-gradient(180deg, #E63946 0%, #C41E3A 100%);
  border-radius: 4rpx;
  margin: 0 2rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 签条高度变化 */
.stick-1 { height: 160rpx; }
.stick-2 { height: 180rpx; }
.stick-3 { height: 170rpx; }
.stick-4 { height: 190rpx; }
.stick-5 { height: 175rpx; }
.stick-6 { height: 165rpx; }
.stick-7 { height: 185rpx; }
.stick-8 { height: 170rpx; }


/* 签筒底部 */
.drum-bottom {
  width: 240rpx;
  height: 40rpx;
  background: linear-gradient(180deg, #C41E3A 0%, #B8232F 100%);
  border-radius: 0 0 120rpx 120rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.3);
  position: relative;
  z-index: 3;
  border: 3rpx solid #FFD700;
}

/* 弹出的签条 */
.flying-stick {
  position: absolute;
  top: 100rpx;
  left: 50%;
  margin-left: -20rpx;
  z-index: 10;
  transform: scale(0.2);
  opacity: 1;
}

.stick-body {
  width: 40rpx;
  height: 280rpx;
  background: linear-gradient(180deg, #E63946 0%, #C41E3A 100%);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.stick-number {
  font-size: 32rpx;
  color: #FFD700;
  font-weight: bold;
  writing-mode: vertical-rl;
  letter-spacing: 4rpx;
}

.drum-shadow {
  width: 240rpx;
  height: 40rpx;
  background: radial-gradient(ellipse, rgba(0, 0, 0, 0.15), transparent);
  border-radius: 50%;
  margin-top: 20rpx;
  position: absolute;
  bottom: -60rpx;
  left: 50%;
  transform: translateX(-50%);
}

.drum-hint {
  margin-top: 32rpx;
  text-align: center;
  position: absolute;
  bottom: -120rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
}

.drum-hint text {
  font-size: 28rpx;
  color: #D4AF37;
  font-weight: bold;
  letter-spacing: 2rpx;
}

/* 摇晃手机提示图片 */
.shake-hint {
  position: absolute;
  animation: shake-hint-smooth 1.5s ease-in-out infinite;
}

.shake-hint-left {
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.shake-hint-right {
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.shake-hint-image {
  width: 100rpx;
  height: 100rpx;
}

@keyframes shake-hint-smooth {
  0%, 100% {
    transform: translateY(-50%) rotate(0deg);
  }
  10% {
    transform: translateY(-50%) rotate(-10deg);
  }
  20% {
    transform: translateY(-50%) rotate(10deg);
  }
  30% {
    transform: translateY(-50%) rotate(-10deg);
  }
  40% {
    transform: translateY(-50%) rotate(10deg);
  }
  50% {
    transform: translateY(-50%) rotate(0deg);
  }
}



.result-card {
  background: #FFFFFF;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.12);
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  top: 20%;
  transform: translateY(100%);
  transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 200;
  overflow-y: auto;
}

.result-card.show {
  transform: translateY(0);
}

.result-card.expanded {
  box-shadow: 0 12rpx 48rpx rgba(0, 0, 0, 0.18);
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  gap: 16rpx;
}

.sign-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #D4AF37;
}

.sign-level {
  font-size: 28rpx;
  color: #C41E3A;
  font-weight: bold;
}

.card-body {
  text-align: center;
  margin-bottom: 32rpx;
}

.sign-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.sign-poem {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.8;
  white-space: pre-wrap;
}


.card-detail {
  border-top: 1rpx solid #EEEEEE;
  padding-top: 32rpx;
  margin-top: 32rpx;
}

.detail-section {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #D4AF37;
  margin-bottom: 16rpx;
}

.section-content {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.8;
}

.card-actions {
  display: flex;
  gap: 20rpx;
  justify-content: center;
  margin-top: 32rpx;
}

.action-btn {
  flex: 1;
  max-width: 300rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border: none;
}

.action-btn::after {
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #D4AF37 0%, #C5A028 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(212, 175, 55, 0.3);
}

.action-btn.secondary {
  background: linear-gradient(135deg, #C8102E 0%, #A00D24 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(200, 16, 46, 0.3);
}

.expand-hint {
  text-align: center;
  margin-top: 24rpx;
  font-size: 24rpx;
  color: #999999;
  padding: 16rpx;
}

.empty-hint {
  text-align: center;
  padding: 80rpx 40rpx;
}

.hint-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 24rpx;
}

.hint-text {
  font-size: 28rpx;
  color: #999999;
  line-height: 1.6;
}

