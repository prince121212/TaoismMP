<cover-view class="tab-bar">
  <cover-view class="tab-bar-border"></cover-view>
  <cover-view wx:for="{{list}}" wx:key="index" class="tab-bar-item" data-path="{{item.pagePath}}" data-index="{{index}}" bindtap="switchTab">
    <cover-view class="tab-bar-text" style="color: {{selected === index ? selectedColor : color}}; font-size: {{selected === index ? '18px' : '16px'}}; font-weight: {{selected === index ? 'bold' : 'normal'}}">
      {{item.text}}
    </cover-view>
  </cover-view>
</cover-view>

