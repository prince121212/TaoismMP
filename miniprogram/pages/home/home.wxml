<view class="culture-page">
  <view class="header">
    <view class="title">中国瓷文化</view>
    <view class="subtitle">千年传承 · 匠心独运</view>
  </view>

  <!-- 左滑提示 -->
  <view class="swipe-hint swipe-hint-left" wx:if="{{currentPage > 0}}" bindtap="goToPrevPage">
    <text class="swipe-arrow">◀</text>
  </view>

  <!-- 右滑提示 -->
  <view class="swipe-hint swipe-hint-right" wx:if="{{currentPage < 2}}" bindtap="goToNextPage">
    <text class="swipe-arrow">▶</text>
  </view>

  <swiper class="swiper-container" current="{{currentPage}}" bindchange="onSwiperChange" indicator-dots indicator-color="rgba(255,255,255,0.5)" indicator-active-color="#fff">
    <!-- 旅游攻略 -->
    <swiper-item>
      <scroll-view scroll-y class="scroll-content">
        <view class="page-title">景德镇旅游攻略</view>
        <view class="travel-card" wx:for="{{travelData}}" wx:key="title">
          <view class="card-title">{{item.title}}</view>
          <view class="card-content">{{item.content}}</view>
        </view>
      </scroll-view>
    </swiper-item>

    <!-- 瓷文化知识 -->
    <swiper-item>
      <scroll-view scroll-y class="scroll-content">
        <view class="page-title">瓷文化知识</view>
        <view class="culture-card" wx:for="{{cultureData}}" wx:key="title" bindtap="toggleDetail" data-index="{{index}}">
          <view class="card-title">{{item.title}}</view>
          <view class="card-content">{{item.content}}</view>
          <view class="card-detail" wx:if="{{item.expanded}}">{{item.detail}}</view>
          <view class="expand-btn">{{item.expanded ? '收起 ▲' : '展开详情 ▼'}}</view>
        </view>
      </scroll-view>
    </swiper-item>

    <!-- 陶瓷推荐 -->
    <swiper-item>
      <scroll-view scroll-y class="scroll-content">
        <view class="page-title">经典陶瓷推荐</view>
        <view class="product-card" wx:for="{{productData}}" wx:key="name">
          <image class="product-image" src="{{item.image}}" mode="aspectFill"></image>
          <view class="product-name">{{item.name}}</view>
          <view class="product-category">{{item.category}}</view>
        </view>
      </scroll-view>
    </swiper-item>
  </swiper>

  <view class="footer">
    <text class="footer-text">传承中华文化 · 弘扬瓷器艺术</text>
  </view>
</view>
